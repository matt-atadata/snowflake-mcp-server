{
  "name": "snowflake-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) Server for Snowflake, tailored for Windsurf",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "snowflake-mcp-server": "./src/index.js"
  },
  "scripts": {
    "start": "node --no-warnings start.js",
    "dev": "nodemon --no-warnings start.js",
    "test": "mocha --require=mocha-esm-loader test/**/*.test.js",
    "test:watch": "mocha --require=mocha-esm-loader --watch test/**/*.test.js",
    "test:coverage": "c8 mocha --require=mocha-esm-loader test/**/*.test.js",
    "test:tools": "node test/test-tools.js",
    "lint": "eslint src/**/*.js test/**/*.js",
    "lint:fix": "eslint --fix src/**/*.js test/**/*.js",
    "format": "prettier --write 'src/**/*.js' 'test/**/*.js'",
    "inspect": "mcp-inspector ./src/index.js --stdio",
    "deploy": "node deploy.js",
    "deploy:sh": "./deploy.sh"
  },
  "keywords": [
    "snowflake",
    "mcp",
    "model-context-protocol",
    "windsurf",
    "sql",
    "database"
  ],
  "author": "atadata",
  "license": "",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "dotenv": "^16.3.1",
    "snowflake-sdk": "^1.9.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.3.0",
    "c8": "^9.1.0",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.2.0",
    "mocha-esm-loader": "^0.0.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.1.1",
    "sinon": "^17.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "punycode": "^2.3.1"
  }
}
