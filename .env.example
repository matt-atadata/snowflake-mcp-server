# Snowflake Connection Parameters
# Account identifier in the format: account-name.region (e.g., xy12345.us-east-1)
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username

# Authentication - Option 1: Username and Password
SNOWFLAKE_PASSWORD=your_password

# Authentication - Option 2: Key Pair Authentication (more secure)
# Path to your private key file (.p8 format)
SNOWFLAKE_PRIVATE_KEY_PATH=path/to/private/key.p8
# Optional passphrase if your private key is encrypted
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=your_passphrase

# Snowflake Session Configuration
# The warehouse to use for executing queries
SNOWFLAKE_WAREHOUSE=your_warehouse
# The default database to use
SNOWFLAKE_DATABASE=your_database
# The default schema to use
SNOWFLAKE_SCHEMA=your_schema
# The role to assume when connecting
SNOWFLAKE_ROLE=your_role

# Server Configuration
SERVER_NAME=snowflake-mcp-server
SERVER_VERSION=1.0.0

# Logging Configuration
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Log file path (if not specified, logs will go to console only)
# LOG_FILE_PATH=./logs/server.log
